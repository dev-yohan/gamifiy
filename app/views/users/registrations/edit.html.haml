#login-box.form-box
  .header
    = t("user.edit_profile.title")

  
  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "new_user", :method => :put }) do |f|
    .body.bg-gray
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, :class => "form-control", :placeholder => t("user.sign_up.email_field")
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .form-group
        %i
          = t("user.edit_profile.leave_blank")
        %br/
        = f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => t("user.sign_up.password_field")
      .form-group
        = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => t("user.sign_up.password_confirmation_field")
      .form-group
        %i
          = t("user.edit_profile.current_password")
        %br/
        = f.password_field :current_password, autocomplete: "off", :class => "form-control", :placeholder => t("user.edit_profile.current_password_field")

    .footer 
      = f.submit t("user.edit_profile.submit_field"), :class => "btn bg-olive btn-block"
      = link_to t("user.edit_profile.back_link"), :back
