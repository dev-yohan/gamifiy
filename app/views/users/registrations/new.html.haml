#login-box.form-box
  .header
    = t("user.sign_up.title")

  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "new_user"}) do |f|
    .body.bg-gray
      = devise_error_messages!
      .form-group
        = f.email_field :email, :class => "form-control", :placeholder => t("user.sign_up.email_field")
      .form-group
        = f.text_field :first_name, :class => "form-control", :placeholder => t("user.sign_up.first_name_field")
      .form-group
        = f.text_field :last_name, :class => "form-control", :placeholder => t("user.sign_up.last_name_field")
      .form-group
        - if @validatable
          %i
            (#{@minimum_password_length} caracteres mÃ­nimo)
        %br/
        = f.password_field :password, :class => "form-control", :placeholder => t("user.sign_up.password_field")
      .form-group
        = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => t("user.sign_up.password_confirmation_field")

    .footer
      = f.submit t("user.sign_up.submit_field"), :class => "btn bg-olive btn-block"
      = render "users/shared/links"
