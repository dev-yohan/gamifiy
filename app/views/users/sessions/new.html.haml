#login-box.form-box
  .header
    = t("user.sign_in.title")
  = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "new_user"}) do |f|
    .body.bg-gray
      .form-group
        = f.email_field :email, :class => "form-control", :placeholder => t("user.sign_in.email_field")
      .form-group
        = f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => t("user.sign_in.password_field")
      - if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label t("user.sign_in.remember_field")
    .footer
      = f.submit t("user.sign_in.submit_field"), :class => "btn bg-olive btn-block"

      = render "users/shared/links"
