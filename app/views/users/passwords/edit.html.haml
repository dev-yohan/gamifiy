.login-box
  .login-logo
    = t("user.change_password.title")
  .login-box-body
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .form-group
        = f.password_field :password, autofocus: true, :class => "form-control", :placeholder => t("user.sign_up.password_field")
      .form-group
        = f.password_field :password_confirmation, :class => "form-control", :placeholder => t("user.sign_up.password_confirmation_field")
      .footer
        = f.submit t("user.change_password.submit_field"), :class => "btn btn-block btn-primary btn-flat"
        = render "users/shared/links"
