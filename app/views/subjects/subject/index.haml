= render "shared/main_menu"
.content-wrapper
  .content-header
    %h1
      %i.fa.fa-users
      = t("subjects.title")
      %small
        %a{:href => subject_create_path}
          =  t("subjects.add_link")
    %ol.breadcrumb
      %li
        %a{:href => subjects_list_path}
          %i.fa.fa-users
          = t("subjects.title")
      %li.active
        = t("subjects.home_breadcrumb")

  .content
    .row
      - flash.each do |name, msg|
        = content_tag :div, msg, class: flash_class(name.to_s)
    .row
      .col-md-12
        = paginate @users
    .row
      =  render :partial => 'subjects/partials/subjects_list', :locals => { :users => @users }
    .row
      .col-md-12
        = paginate @users
