.box
  .box-header
    %h4.box-title
      %i.fa.fa-users
      = t("subjects.title")
  - if !users.empty?
    .box-body
      %ul.todo-list.ui-sortable
        - users.each do |user|
          %li
            %span.text
              %a{:href => subject_show_path(user)}
                = user.external_email
            .tools
              %a{:href => subject_show_path(user)}
                %i.fa.fa-edit
              %a{:href => subject_delete_path(user)}  
                %i.fa.fa-trash-o
  - else
    .box-body
      %p
        = t("subjects.no_subjects_message")
      %p
        %a{:href => subject_create_path, :class => "btn btn-success"}
          = t("subjects.add_title")
