= render "shared/main_menu"
.content-wrapper
  .content-header
    %h1
      %i.fa.fa-gears
      = t("delete_event.title", :name => @event.name)

    %ol.breadcrumb
      %li
        %a{:href => events_list_path}
          %i.fa.fa-gears
          = t("events.title")
      %li.active
        = t("delete_event.title", :name => @event.name)

  .content
    .row
      .col-md-12
        %p
          = t("delete_event.delete_message")
        %a{:href => event_destroy_path(@event), :class => "btn btn-success"}
          = t("delete_event.submit_btn")

        %a{:href => events_list_path, :class => "btn btn-danger"}
          = t("delete_event.cancel_btn")
