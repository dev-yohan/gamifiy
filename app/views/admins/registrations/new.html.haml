#login-box.form-box
  .header
    = t("admin.sign_up.title")

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .body.bg-gray
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, :class => "form-control", :placeholder => t("admin.sign_up.email_field")
      .form-group
        - if @validatable
          %i
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => t("admin.sign_up.password_field")
      .form-group
        = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => t("admin.sign_up.password_confirmation_field")

    .footer
      = f.submit t("admin.sign_up.submit_field"), :class => "btn bg-olive btn-block"
      = render "admins/shared/links"
